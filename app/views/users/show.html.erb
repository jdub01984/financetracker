<h1><%= @user.first_name %>'s Profile</h1>

<h2>User Details</h2>
<dl class="dl-horizontal">
  <dt><strong>Full Name</strong></dt>
  <dd><%= @user.full_name %></dd>
  <dt><strong>Email</strong></dt>
  <dd><%= @user.email %></dd>
</dl>

<% if @user.stocks.size > 0 %>
  <h2>User's Stocks</h2>
  <%= render 'stocks/list' %>
<% else %>
  <p class="lead">This user is not tracking any stocks.</p>
<% end %>

<%= link_to "Back", my_friends_path, class: "btn btn-xs btn-primary" %> <% if !current_user.not_friends_with?(@user) %><%= link_to "Remove Friend", friendship_path(@user), :method => :delete, :data => { :confirm => "Are you sure?" }, :class => "btn btn-xs btn-danger" %><% end %>